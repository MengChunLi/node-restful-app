extends layout

block content
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username', name='Username')
                input#inputUserEmail(type='text', placeholder='Email', name='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name', name='Fullname')
                input#inputUserAge(type='text', placeholder='Age', name='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location', name='Location')
                input#inputUserGender(type='text', placeholder='gender', name='gender')
                br
                button#btnAddUser Add User
        // /ADD USER

    // /WRAPPER